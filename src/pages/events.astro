---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Get all events and sort by date (most recent first)
const events = await getCollection('events');
const sortedEvents = events.sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());

// Format the slug for dynamic routing
function formatSlug(id: string) {
  return id.replace('events/', '').replace('.md', '');
}
---

<Layout title="Events">
  <div class="container mx-auto px-4 py-16 md:py-24">
    <h1 class="text-5xl font-extrabold mb-8 text-center">BSides Roanoke Events</h1>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 w-full max-w-6xl">
    {sortedEvents.map((event: any) => (
      <div class="bg-gray-800 rounded-3xl p-6 border border-gray-700 hover:border-accent-blue transition-colors">
        <h2 class="text-3xl font-bold mb-2">{event.data.title}</h2>
        <p class="text-gray-400 mb-1"><strong>Date:</strong> {new Date(event.data.date).toLocaleDateString()}</p>
        <p class="text-gray-400 mb-1"><strong>Location:</strong> {event.data.location}</p>
        <p class="text-gray-300">{event.data.description || 'An annual regional cybersecurity conference.'}</p>
        <a href={`/events/${formatSlug(event.id)}`} class="mt-4 inline-block px-6 py-3 bg-accent-blue text-gray-900 rounded-full font-bold hover:bg-opacity-80 transition-colors glow-shadow">
          View Event
        </a>
      </div>
    ))}
    </div>
  </div>
</Layout>
